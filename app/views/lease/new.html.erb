<%= @item.name %>
<%= form_for @lease do |f| %>
    How long do you want to rent this out for?<br>
    <%= f.text_field :duration_days %><br>
    Check if you would like to pay all at once
    <%= f.check_box :all_at_once %><br>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.submit 'Rent!' %>
<% end %>
<%= link_to "Go back", :back %>
<%= form_for @card do |f| %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.text_field :number %>
    <%= f.text_field :month %>
    <%= f.text_field :year %>
    <%= f.text_field :verification_value %>
    <%= f.submit 'Add card' %>
<% end %>