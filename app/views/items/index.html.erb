<p style="color: green"><%= notice %></p>

<h1>Items</h1>
<%= form_with url: '/search_item', method: :get do |form| %>
  <%= form.text_field :name %>
  <%= form.submit "Search" %>
<% end %>
<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
    </p>
  <% end %>
</div>

<%= link_to "New item", new_item_path %>
